  <script>
    function signUp() {
      const form = document.forms["prac"]
      if (!form.checkValidity()) {
        form.reportValidity()
        return false;
      }
      const data = {
        userid: form.userid.value,
        name: form.name.value,
        password: form.password.value
      }

      axios({
        method: 'post',
        url: "/signup",
        data: data
      }).then((res) => {
        alert('회원가입에 성공하셨습니다.')
        document.location.href = '/';
      })
    }
  </script>
